<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shb.springsecurityjsonlogin.mapper.UserMapper">

    <select id="loadUserByUsername" resultType="com.shb.springsecurityjsonlogin.entity.User">
        select
        *
        from user
        <where>
            username = #{username}
        </where>
    </select>
    <select id="getRoleListByUserId" resultType="com.shb.springsecurityjsonlogin.entity.Role">
        select
        *
        from role
        <where>
            id in (select rid from user_role where uid = #{userId})
        </where>
    </select>
</mapper>
